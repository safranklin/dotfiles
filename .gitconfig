[user]
	name = safranklin
	email = 37414077+safranklin@users.noreply.github.com
	# signingkey is refreshed by bootstrap.sh from github.com/safranklin.keys
	signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIHivTFHqH0AfZvme/8E7qZMqx95qRMMvHSPOIDJKJarM

[gpg]
	format = ssh

[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers

[commit]
	gpgsign = true

[tag]
	gpgsign = true

[init]
	defaultBranch = main

[core]
	editor = code --wait
	pager = delta
	autocrlf = input

[delta]
	line-numbers = true
	side-by-side = true
	navigate = true

[merge]
	conflictstyle = zdiff3

[diff]
	algorithm = histogram
	colorMoved = default

[push]
	default = current
	autoSetupRemote = true
	followTags = true

[pull]
	rebase = true

[fetch]
	prune = true
	prunetags = true

[rebase]
	autosquash = true
	autostash = true

[rerere]
	enabled = true

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[alias]
	st = status -sb
	lg = log --oneline --graph --decorate --all
	amend = commit --amend --no-edit
	undo = reset --soft HEAD~1
	wip = !git add -A && git commit -m 'chore: wip [skip ci]'
